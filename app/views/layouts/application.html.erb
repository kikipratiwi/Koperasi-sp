<!DOCTYPE html>
<html>
  <head>
    <title>KoperasiSp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_official %>
    <%= nav_bar fixed: :left, brand: "Nonna Credit Union", responsive: true do %>
      <%= menu_group do %>
          <%= menu_item "Home", root_path %>
          <%= menu_divider %>
          <%= drop_down "Config" do %>
              <%= menu_item "Interest", interests_path %>
              <%= menu_item "Deposit Category", deposit_categories_path %>
              <%= menu_item "Saving", savings_path %>
              <%= menu_item "Loan", loan_types_path %>
          <% end %>
          <%= drop_down "Report" do %>
              <%= menu_item "Member", member_report_path(format: :pdf) %>
              <%= menu_item "Official", member_report_path(format: :pdf) %>
              <%= menu_item "Deposit", deposit_report_path(format: :pdf) %>
              <%= menu_item "Loan", member_report_path(format: :pdf) %>
          <% end %>        
          <%= menu_item "Member", members_path %>
      <% end %>
      <%= menu_group pull: :right do %>
          <% if current_official %>
              <%= menu_item "Edit Profile", edit_official_registration_path %>
              <%= menu_item "Log Out", destroy_official_session_path, method: :delete %>
          <% else %>

          <% end %>
      <% end %>
    <% end %> 
  <% end %>
  <div class="container">
    <div class="row">
      <div class="span3">
        <%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>
