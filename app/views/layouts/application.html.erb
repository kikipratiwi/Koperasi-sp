<!DOCTYPE html>
<html>
  <head>
    <title>KoperasiSp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
 <%= nav_bar fixed: :left, brand: "Koperasi Nonna", responsive: true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <%= drop_down "Konfigurasi" do %>
            <%= menu_item "Bunga", interests_path %>
            <%= menu_item "Simpanan", savings_path %>
            <%= menu_item "Pinjaman", loan_types_path %>
        <% end %>
        <%= drop_down "Laporan" do %>
            <%= menu_item "Anggota", member_report_path(format: :pdf) %>
            <%= menu_item "Petugas", member_report_path(format: :pdf) %>
            <%= menu_item "Simpanan", member_report_path(format: :pdf) %>
            <%= menu_item "Pinjaman", member_report_path(format: :pdf) %>
        <% end %>        
        <%= menu_item "Anggota", members_path %>
    <% end %>
    <%= menu_group pull: :right do %>
        <% if current_official %>
            <%= menu_item "Profile", edit_official_registration_path %>
            <%= menu_item "Log Out", destroy_official_session_path, method: :delete %>
        <% else %>

        <% end %>
    <% end %>
<% end %> 
  <div class="container">
    <div class="row">
      <div class="span3">
		<%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>
