<%- model_class = Deposit -%>
<div class="page-header">
  <h1><%= @member.created_at.strftime("Simpanan : %I%M-").to_s + @member.id.to_s %></h1>
  <%= 
    link_to t('.show', :default => t("helpers.links.cetak_laporan")),
              member_deposit_path(@deposits.first.member_id, @deposits.first), :class => 'btn btn-default'
  %> 
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:jenis_simpanan) %></th>
      <th><%= model_class.human_attribute_name(:besar) %></th>
      <th><%= model_class.human_attribute_name(:info) %></th>
      <th><%= model_class.human_attribute_name(:tanggal) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.id %></td>
        <td><%= deposit.deposit_category.name.titleize %></td>
        <td><%= deposit.amount %></td>
        <td><%= deposit.info %></td>
        <td><%= deposit.created_at.strftime("%d %b %Y %I:%M%p") %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      member_deposit_path(deposit.member_id, deposit), :class => 'btn btn-default btn-xs' %> 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_member_deposit_path(deposit.member_id, deposit), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      member_deposit_path(deposit.member_id, deposit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_member_deposit_path(@member),
            :class => 'btn btn-primary' %>
