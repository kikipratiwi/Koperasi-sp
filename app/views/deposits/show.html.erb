<%- model_class = Deposit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @deposit.deposit_category.name.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= to_rp(@deposit.amount) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:saved_at) %>:</strong></dt>
  <dd><%= to_datetime(@deposit.created_at) %></dd> 
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= @deposit.info %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              member_deposits_path(@deposit.member_id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_deposit_path(@deposit.member_id, @deposit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_deposit_path(@deposit.member_id, @deposit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
