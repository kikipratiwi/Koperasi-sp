<%= form_for @saving, :html => { :class => "form-horizontal saving" } do |f| %>

  <% if @saving.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@saving.errors.count, "error") %> prohibited this saving from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @saving.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :saving, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :saving, :class => 'form-control' %>
    </div>
    <%=f.error_span(:saving) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                savings_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
