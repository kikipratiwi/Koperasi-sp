<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:bergabung) %></th>
      <th><%=t '.actions', :default => t("helpers.menu") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member_id_format(member.created_at, member.id) %></td>
        <td><%= member.name %></td>
        <td><%= member.status %></td>
        <td><%= to_datetime(member.created_at) %></td>
        <td>
          <% unless member.active_status? %>
            <%= link_to t('.edit', :default => t("helpers.links.bayar_simpanan_pokok")),
                        pay_principal_savings_member_path(member), :class => 'btn btn-default btn-xs',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
          <% else %>
            <%= link_to t('.show', :default => t("helpers.links.simpanan")),
                        member_deposits_path(member), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.show', :default => t("helpers.links.pinjaman")),
                        member_loans_path(member), :class => 'btn btn-default btn-xs' %>
          <% end %>
        </td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      member_path(member), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_member_path(member), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      member_path(member),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_member_path,
            :class => 'btn btn-primary' %>
