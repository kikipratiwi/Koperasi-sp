<%= form_for @loan, :html => { :class => "form-horizontal loan_type" } do |f| %>

  <% if @loan.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @loan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :due_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :due_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:due_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                member_loans_path(params[:member_id]), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
