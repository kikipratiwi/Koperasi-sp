<%- model_class = Loan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:loan_type_id) %>:</strong></dt>
  <dd><%= @loan.loan_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:member_id) %>:</strong></dt>
  <dd><%= @loan.member_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @loan.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accorded_at) %>:</strong></dt>
  <dd><%= @loan.accorded_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loan_at) %>:</strong></dt>
  <dd><%= @loan.loan_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid_off_at) %>:</strong></dt>
  <dd><%= @loan.paid_off_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= @loan.info %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              loans_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_loan_path(@loan), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              loan_path(@loan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
